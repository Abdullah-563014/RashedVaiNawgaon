<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainActivityRootLayoutId"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_one"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <include
        layout="@layout/my_toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SMS FUNCTION"
                    android:textSize="25sp"
                    android:textColor="#000000"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal"
                    android:weightSum="3">
                    <ImageButton
                        android:id="@+id/findSmsButtonId"
                        android:layout_width="100dp"
                        android:layout_margin="5dp"
                        android:textSize="10sp"
                        android:src="@drawable/ic_location"
                        android:background="@drawable/green_and_white_border_button"
                        android:layout_gravity="center"
                        android:textColor="@color/buttonTextColor"
                        android:layout_height="100dp"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:text="Location" />
                    <ImageButton
                        android:id="@+id/statusSmsButtonId"
                        android:layout_width="100dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_gravity="center"
                        android:textSize="10sp"
                        android:src="@drawable/ic_status"
                        android:background="@drawable/green_and_white_border_button"
                        android:textColor="@color/buttonTextColor"
                        android:layout_height="100dp"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:text="Status" />

                    <ImageButton
                        android:id="@+id/offSmsButtonId"
                        android:layout_width="100dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:textSize="10sp"
                        android:src="@drawable/ic_lock"
                        android:background="@drawable/green_and_white_border_button"
                        android:textColor="@color/buttonTextColor"
                        android:layout_height="100dp"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:layout_gravity="center"
                        android:text="Bike Lock" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="3">



                    <ImageButton
                        android:id="@+id/onSmsButtonId"
                        android:layout_width="100dp"
                        android:layout_margin="5dp"
                        android:textSize="10sp"
                        android:src="@drawable/ic_lock_open"
                        android:background="@drawable/green_and_white_border_button"
                        android:textColor="@color/buttonTextColor"
                        android:layout_height="100dp"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:layout_gravity="center"
                        android:text="Bike Unlock" />
                    <ImageButton
                        android:id="@+id/vibSendorOffSmsButtonId"
                        android:layout_width="100dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/green_and_white_border_button"
                        android:textColor="@color/buttonTextColor"
                        android:layout_height="100dp"
                        android:src="@drawable/ic_phone_vibration_off"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:textSize="10sp"
                        android:layout_gravity="center_vertical"
                        android:text="Vibration off" />

                    <ImageButton
                        android:id="@+id/vibSensorOnSmsButtonId"
                        android:layout_width="100dp"
                        android:layout_margin="5dp"
                        android:textSize="10sp"
                        android:src="@drawable/ic_phone_vibration_on"
                        android:background="@drawable/green_and_white_border_button"
                        android:textColor="@color/buttonTextColor"
                        android:layout_height="100dp"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:layout_gravity="center_vertical"
                        android:text="Vibration on" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <ImageButton
                        android:id="@+id/settingsButtonId"
                        android:layout_width="100dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/green_and_white_border_button"
                        android:textColor="@color/buttonTextColor"
                        android:layout_height="100dp"
                        android:src="@drawable/ic_setting"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:textSize="10sp"
                        android:layout_gravity="center_vertical"
                        android:text="Settings" />
                    <Button
                        android:id="@+id/openWebsiteButtonId"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:paddingRight="20dp"
                        android:paddingLeft="20dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/simple_button_bg"
                        android:textColor="@color/buttonTextColor"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:text="Live Track"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                android:weightSum="2"
                android:padding="5dp"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/autoLockOnButtonId"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/simple_button_bg"
                    android:textColor="@color/buttonTextColor"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:text="Auto Lock On"/>
                <Button
                    android:id="@+id/autoLockOffButtonId"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/simple_button_bg"
                    android:textColor="@color/buttonTextColor"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:text="Auto Lock Off"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                android:weightSum="2"
                android:padding="10dp"
                android:layout_height="wrap_content">
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/simple_button_bg"
                    android:textColor="@color/buttonTextColor"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:id="@+id/deviceNumberButtonId"
                    android:layout_height="wrap_content"
                    android:text="Save Your Device Number"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/simple_button_bg"
                    android:textColor="@color/buttonTextColor"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:id="@+id/voiceCommandButtonId"
                    android:layout_height="wrap_content"
                    android:text="Voice Command"/>
            </LinearLayout>




            <TextView
                android:id="@+id/showPhoneNumberTextViewId"
                android:gravity="center"
                android:text="Your Device Number Is:-"
                android:textColor="#000000"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:weightSum="2"
                android:padding="5dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="100dp">
                <Button
                    android:id="@+id/contactUsButtonId"
                    android:text="Contact With Us"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <Button
                    android:id="@+id/facebookButtonId"
                    android:drawableLeft="@drawable/ic_facebook"
                    android:text="Connect With Facebook"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>